@model TodoWeb.Models.Todo

@{
    ViewData["Title"] = "Create Todo";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Create Todo</h1>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="mb-4 text-sm text-red-600 bg-red-50 rounded-lg p-4"></div>
            
            <div class="mb-6">
                <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-2">Title</label>
                <div class="relative rounded-md shadow-sm">
                    <input asp-for="Title" 
                           class="block w-full rounded-lg border-gray-300 focus:ring-primary focus:border-primary sm:text-sm p-2.5"
                           placeholder="Enter todo title..." />
                    <span asp-validation-for="Title" class="mt-2 text-sm text-red-600"></span>
                </div>
            </div>
            
            <div class="mb-6">
                <label class="inline-flex items-center">
                    <input asp-for="IsComplete" 
                           class="rounded border-gray-300 text-primary focus:ring-primary h-5 w-5" />
                    <span class="ml-2 text-sm text-gray-700">@Html.DisplayNameFor(model => model.IsComplete)</span>
                </label>
            </div>
            
            <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                <button type="submit" 
                        class="bg-primary hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Create Todo
                </button>
                <a asp-action="Index" 
                   class="text-gray-600 hover:text-gray-900 font-semibold transition duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
