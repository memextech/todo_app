<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Todo App</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3b82f6',
                    }
                }
            }
        }
    </script>
    <style>
        html {
            overflow-y: scroll;
        }
    </style>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">
    <header>
        <nav class="bg-white shadow-lg">
            <div class="max-w-6xl mx-auto px-4">
                <div class="flex justify-between">
                    <div class="flex space-x-7">
                        <div>
                            <a asp-controller="Home" asp-action="Index" class="flex items-center py-4">
                                                                                <span class="font-semibold text-primary text-xl">Todo App</span>
                                                                                </a>
                                                                            </div>
                                                                            <div class="hidden md:flex items-center space-x-4">
                                                                                <a asp-controller="Home" asp-action="Index" class="py-2 px-4 text-gray-500 hover:text-primary transition duration-300">Home</a>
                                                                                <a asp-controller="Todo" asp-action="Index" class="py-2 px-4 text-gray-500 hover:text-primary transition duration-300">Tasks</a>
                                                                                <a asp-controller="Home" asp-action="Contact" class="py-2 px-4 bg-primary text-white rounded-full hover:bg-blue-600 transition duration-300">Contact Us</a>
                                                                            </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-white shadow-lg mt-8">
        <div class="max-w-6xl mx-auto px-4 py-4">
            <div class="text-center text-gray-500">
                &copy; 2025 - Todo App - <a asp-controller="Home" asp-action="Contact" class="hover:text-primary transition duration-300">Contact Us</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
